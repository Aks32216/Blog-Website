<%- include('partials/header'); %>
    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <label class="writings" for="exampleFormControlTitle">Title</label>
            <input type="text" name="journalTitle" class="form-control" id="exampleFormControlTitle" autocomplete="off">
        </div>
        <div class="form-group">
            <label class="writings" for="exampleFormControlPost">Post</label>
            <textarea class="form-control" name="journalPost" id="exampleFormControlPost" rows="5"></textarea>
        </div>
        <button type="submit" class="btn btn-success writings" name="button">Compose</button>
    </form>
<%- include('partials/footer'); %>  